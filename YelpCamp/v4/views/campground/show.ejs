<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item active">Info 2</li>
                <li class="list-group-item active">Info 3</li>
            </div>
        </div>
    </div>
    <div class="thumbnail" style="text-align: center; width: 50% ; margin: auto" > 
    <h1><%= campground.name %></h1>
    <img src="<%= campground.image %>">
    <h5 style="text-align: left; margin:10px 30px" ><%= campground.description %></h5>
    </div>
    <p>
        <a href="/campgrounds/<%= campground.id %>/comments/new" class="btn btn-success ">
            Add New Comment
        </a>
    </p>
    <% campground.comments.forEach(function(comment){ %>
        <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
    <% }) %>
</div>

<%include ../partials/footer %>